<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
	http://www.springframework.org/schema/util 
	http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" ref="propertyLocations" />
	</bean>

	<!-- PropertyPlaceholderConfigurer에 사용될 properties 파일을 등록 -->
	<util:list id="propertyLocations" list-class="java.util.LinkedList">
		<value>/WEB-INF/properties/jdbc.properties</value>
		<value>/WEB-INF/properties/context.properties</value>
		<value>/WEB-INF/properties/email.properties</value>
		
		<value>/WEB-INF/properties/system.properties</value>		
		<value>/WEB-INF/properties/enviroment_ko_KR.properties</value>
	</util:list>
	
</beans>
